root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[Makefile]
tab_width = 8
indent_style = tab
indent_size = tab

[*.md]
trim_trailing_whitespace = false
quote_style = single

[*.py]
max_line_length = 79
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
quote_style = double
spaces_before_comment = 2
continuation_indent_size = 4
tab_width = 4
use_parentheses = true

[*.lua]
max_line_length = 80
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
quote_style = single
spaces_before_comment = 2
continuation_indent_size = 4
tab_width = 2
use_parentheses = true

